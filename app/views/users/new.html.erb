<% provide(:title, "Sign Up") %>
<h1>Sign Up</h1>
<div class="row">
<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages' %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.text_field :email %>
  
  <%= f.label :password %>
  <%= f.password_field :password %>
  
  <%= f.label :password_confirmation, "Confirmation" %>
  <%= f.password_field :password_confirmation %>
<br>
  <%= f.submit "Create Account", class: "btn btn-primary" %>
<% end %>
</div>
